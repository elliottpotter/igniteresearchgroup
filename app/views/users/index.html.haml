%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Email
      %th Referral name
      %th Phone number
      %th Gender
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= user.referral_name
        %td= user.phone_number
        %td= user.gender
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

